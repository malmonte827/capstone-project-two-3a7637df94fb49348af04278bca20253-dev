{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "Pet Schema",
    "required": [
        "name",
        "age",
        "species",
        "user_id"
    ],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "age": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "species": {
            "type": "string",
            "maxLength": 30,
            "minLength": 1
        },
        "hunger": {
            "type": "integer",
            "minimum": 0,
            "maximum": 10
        },
        "description":{
            "type": "string",
            "maxLength": 250
        },
        "user_id": {
            "type": "integer"
        }
    },
    "additionalProperties": false
}